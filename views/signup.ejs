<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Homework Tracker</title>
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/imgs/book-icon.png"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
      integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w=="
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <style>
      body {
        background-image: url('/imgs/studentsmile.jpg');
        background-position: center top;
        background-size: cover;
        background-repeat: no-repeat;
      }
    </style>
  </head>
  <body>
    <header class="p-6">
      <div class="row mt-5">
        <div class="text-center col-12">
          <h1 class="display-5"><a href="/profile" class="link-dark">Your Homework Tracker</a></h1>
          <span>Get to work!</span>
        </div>
      </div>
    </header>
    <main class="px-5">
        <div class="row justify-content-center">
            <section class="col-6 mt-5">
                <% if (locals.messages.errors) { %>
                    <% messages.errors.forEach( el => { %>
                        <div class="alert alert-danger"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <% if (locals.messages.info) { %>
                    <% messages.info.forEach( el => { %>
                        <div class="alert alert-info"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <form action="/signup" method="POST">
                    <div class="mb-3">
                        <input type="text" placeholder="User Name" class="form-control" style="background: rgba(255,255,255,0.4);" id="userName" name="userName">
                      </div>
                    <div class="mb-3">
                      <input type="email" placeholder="Email" class="form-control" style="background: rgba(255,255,255,0.4);" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
                    </div>
                    <div class="mb-3">
                      <input type="password" placeholder="Password" class="form-control" style="background: rgba(255,255,255,0.4);" id="password" name="password">
                    </div>
                    <div class="mb-3">
                        <input type="password" placeholder="Confirm Password" class="form-control" style="background: rgba(255,255,255,0.4);" id="confirmPassword" name="confirmPassword">
                      </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </form>
            </section>
        </div>
    </main>

<%- include('partials/footer') -%>